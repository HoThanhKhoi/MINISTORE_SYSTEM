<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ResetPassServlet</servlet-name>
        <servlet-class>controllers.ResetPassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateOtp</servlet-name>
        <servlet-class>controllers.ValidateOtp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeNewPasswordServlet</servlet-name>
        <servlet-class>controllers.ChangeNewPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controllers.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productInfoServlet</servlet-name>
        <servlet-class>controllers.productInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProductServlet</servlet-name>
        <servlet-class>controllers.ViewProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowPaginatedServlet</servlet-name>
        <servlet-class>controllers.ShowPaginatedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowPaginateServlet</servlet-name>
        <servlet-class>controllers.ShowPaginateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showCategoriesServlet</servlet-name>
        <servlet-class>controllers.showCategoriesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetPassServlet</servlet-name>
        <url-pattern>/ResetPassServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateOtp</servlet-name>
        <url-pattern>/ValidateOtp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeNewPasswordServlet</servlet-name>
        <url-pattern>/ChangeNewPasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProductServlet</servlet-name>
        <url-pattern>/ViewProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowPaginateServlet</servlet-name>
        <url-pattern>/ShowPaginateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showCategoriesServlet</servlet-name>
        <url-pattern>/showCategoriesServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>homePage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
